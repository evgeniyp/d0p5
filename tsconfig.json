{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "lib": ["ES2021"],
    "module": "commonjs",
    "target": "ES2021",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./build",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
  }
}
